{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "es5",
    "types": ["webpack-env"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/dist",
    "node_modules",
    "**/node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts",
    "src/**/*.test.*",
    "src/**/tests/**/*",
    "src/**/__tests__/**/*",
    "src/**/*.stories.*",
    "src/**/*.mockdata.*",
    "src/**/__testfixtures__/**"
  ]
}
